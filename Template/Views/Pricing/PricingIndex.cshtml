
@{
    ViewData["Title"] = "PricingIndex";

    List<Service> services = ViewBag.Services;
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a asp-action="index" asp-controller="home">Home</a></li>
                <li>Pricing</li>
            </ol>
            <h2>Pricing</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container">

            <div class="row no-gutters">

                @foreach (Pricing pricing in Model)
                {
                    <div class="col-lg-4 box">
                        <h3>@pricing.Name</h3>
                        <h4>$@pricing.Price<span>per month</span></h4>
                        <ul>

                            @foreach (Service service in services)
                            {
                                <li class= "@(pricing.PricingServices.Exists(ps => ps.ServiceId == service.Id) ? "" : "na")">@service.Name </li>
                            }

                        </ul>
                        <a href="#" class="buy-btn">Buy Now</a>
                    </div>

                }


            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->